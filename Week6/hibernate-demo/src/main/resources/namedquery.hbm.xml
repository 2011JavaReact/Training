<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping>
	<query name="PlanetDetail_getAssociatedPlanet">
		<![CDATA[SELECT p from Planet p JOIN p.planetDetail pd WHERE pd.id = :pdi]]>
	</query>
</hibernate-mapping>